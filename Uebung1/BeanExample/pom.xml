<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.3.1</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>

  <groupId>edu.fra.uas</groupId>
  <artifactId>notenschnitt</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>NotenschnittRechner</name>
  <description>Einfacher Notenschnitt-Rechner mit Spring Boot und Thymeleaf</description>

  <properties>
    <java.version>17</java.version>
  </properties>

  <dependencies>
    <!-- Kern von Spring Boot -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>

    <!-- FÃ¼r Controller, HTTP-Requests, Model usw. -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- ðŸ”¹ Wichtig: Template-Engine Thymeleaf -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-thymeleaf</artifactId>
    </dependency>

    <!-- Logging & Tests -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <!-- Main-Klasse muss exakt zum Klassennamen passen -->
          <mainClass>notenschnitt.SchnittApplication</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
